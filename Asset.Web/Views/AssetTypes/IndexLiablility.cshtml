@model IEnumerable<Asset.Web.AssetType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content container-fluid">


    <div class="card-box">
        <div class="row">
            <div class=" card-body">

                <div class="col-xs-8 text-right m-b-30">
                    <a asp-action="Create" class="btn btn-primary pull-right rounded"><i class="fa fa-plus"></i> Add Page</a>

                </div>
            </div>

            <div class="row">

                <div class="col-md-12">

                    @ViewBag.Exist

                    <div class="table-responsive">
                        <table class="table table-striped custom-table datatable" id="example">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Type)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Tenure)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AL)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Type)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tenure)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AL)
                                        </td>

                                        <td style="width:250px;">
                                            <a asp-action="Edit" class="btn btn-primary btn-xs " asp-route-id="@item.id">Edit</a> |
                                            <a asp-action="Details" class="btn btn-success btn-xs " asp-route-id="@item.id">Details</a> |
                                            <a asp-action="Delete" class="btn btn-danger btn-xs " asp-route-id="@item.id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
