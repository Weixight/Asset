@model IEnumerable<Asset.Web.Models.CorpReg>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content container-fluid">
    <div class="card-box m-b-0 panel panel-danger" style="margin-top:20px">
        <div class="row">
            <div class="col-xs-4">

                <h4 class="page-title">@ViewBag.Name Asset</h4>
            </div>
            <div class="col-xs-8 text-right m-b-30">
                <a asp-action="Create" class="btn btn-primary pull-right rounded"><i class="fa fa-plus"></i> Add Asset</a>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @ViewBag.Exist
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable" id="example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CACRegno)
                                </th>
                             

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CACRegno)
                                    </td>
                                   
                                    <td>
                                        @{
                                            List<CorpEarning> MyCorpEarningList = new List<CorpEarning>();
                                            MyCorpEarningList = ViewBag.Earning;
                                            var ItemEarningList = MyCorpEarningList.Where(K => K.Corpid == item.id).ToList();
                                        }
                                        @if (ItemEarningList.Count() > 0)
                                        {
                                            <a asp-action="AverageEaring" asp-controller="EarningCalculation" class="btn btn-primary fa fa-money" asp-route-id="@item.id">Earning</a>
                                            <a asp-action="AverageEaringWeighted" asp-controller="EarningCalculation" class="btn btn-primary fa fa-money-bill" asp-route-id="@item.id">Weighted Earning</a>
                                            <a asp-action="Delete" class="btn btn-primary fa fa-money" asp-route-id="@item.id">Net Worth</a>

                                        }
                                        else
                                        {
                                            <a asp-action="Delete" class="btn btn-primary fa fa-money" asp-route-id="@item.id">Net Worth</a>
                                        }


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
